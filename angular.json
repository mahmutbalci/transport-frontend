{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"default": {
			"root": "",
			"sourceRoot": "src",
			"projectType": "application",
			"prefix": "kt",
			"schematics": {
				"@schematics/angular:component": {
					"prefix": "kt",
					"styleext": "scss"
				},
				"@schematics/angular:directive": {
					"prefix": "kt"
				}
			},
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:browser",
					"options": {
						"outputPath": "dist",
						"index": "src/index.html",
						"main": "src/main.ts",
						"tsConfig": "src/tsconfig.app.json",
						"polyfills": "src/polyfills.ts",
						"assets": [
							"src/assets",
							{
								"glob": "**/*",
								"input": "./node_modules/mxgraph/javascript/src",
								"output": "/assets/mxgraph"
							},
							{
								"glob": "**/*",
								"input": "./node_modules/@covalent/code-editor/assets/monaco",
								"output": "/assets/monaco"
							}
						],
						"styles": [
							"src/styles.scss",
							"src/assets/vendors/base/vendors.bundle.css",
							"src/assets/demo/default/base/style.bundle.css",
							"node_modules/material-design-icons/iconfont/material-icons.css",
							"src/assets/mxgraph/css/common.css",
							"node_modules/bootstrap/dist/css/bootstrap.css",
							"node_modules/print-js/dist/print.css"
						],
						"scripts": [
							"src/assets/vendors/base/vendors.bundle.js",
							"src/assets/demo/default/base/scripts.bundle.js",
							"node_modules/chart.js/dist/chart.js",
							"node_modules/print-js/dist/print.js"
						],
						"es5BrowserSupport": true
					},
					"configurations": {
						"production": {
							"outputHashing": "all",
							"sourceMap": false,
							"extractCss": true,
							"namedChunks": false,
							"aot": true,
							"vendorChunk": true,
							"buildOptimizer": false,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.prod.ts"
								}
							]
						},
						"dev": {
							"outputHashing": "all",
							"sourceMap": false,
							"extractCss": true,
							"namedChunks": false,
							"aot": true,
							"vendorChunk": true,
							"buildOptimizer": false,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.dev.ts"
								}
							]
						},
						"tst": {
							"outputHashing": "all",
							"sourceMap": false,
							"extractCss": true,
							"namedChunks": false,
							"aot": true,
							"vendorChunk": true,
							"buildOptimizer": false,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.tst.ts"
								}
							]
						},
						"uat": {
							"outputHashing": "all",
							"sourceMap": false,
							"extractCss": true,
							"namedChunks": false,
							"aot": true,
							"vendorChunk": true,
							"buildOptimizer": false,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.uat.ts"
								}
							]
						},
						"preprod": {
							"outputHashing": "all",
							"sourceMap": false,
							"extractCss": true,
							"namedChunks": false,
							"aot": true,
							"vendorChunk": true,
							"buildOptimizer": false,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.preprod.ts"
								}
							]
						}
					}
				},
				"serve": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"options": {
						"browserTarget": "default:build"
					},
					"configurations": {
						"production": {
							"browserTarget": "default:build:production"
						},
						"dev": {
							"browserTarget": "default:build:production"
						},
						"tst": {
							"browserTarget": "default:build:production"
						},
						"uat": {
							"browserTarget": "default:build:production"
						},
						"preprod": {
							"browserTarget": "default:build:production"
						}
					}
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n",
					"options": {
						"browserTarget": "default:build"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "src/test.ts",
						"karmaConfig": "./karma.conf.js",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "src/tsconfig.spec.json",
						"scripts": [
							"src/assets/vendors/base/vendors.bundle.js",
							"src/assets/demo/default/base/scripts.bundle.js"
						],
						"styles": [
							"src/styles.scss",
							"src/assets/vendors/base/vendors.bundle.css",
							"src/assets/demo/default/base/style.bundle.css",
							"node_modules/material-design-icons/iconfont/material-icons.css",
							"src/assets/mxgraph/css/common.css"
						],
						"assets": [
							"src/assets"
						]
					}
				},
				"lint": {
					"builder": "@angular-devkit/build-angular:tslint",
					"options": {
						"tsConfig": [
							"src/tsconfig.app.json",
							"src/tsconfig.spec.json"
						],
						"exclude": [
							"**/node_modules/**"
						]
					}
				}
			}
		},
		"default-e2e": {
			"root": "e2e",
			"sourceRoot": "",
			"projectType": "application",
			"architect": {
				"e2e": {
					"builder": "@angular-devkit/build-angular:protractor",
					"options": {
						"protractorConfig": "./protractor.conf.js",
						"devServerTarget": "default:serve"
					}
				},
				"lint": {
					"builder": "@angular-devkit/build-angular:tslint",
					"options": {
						"tsConfig": [
							"e2e/tsconfig.e2e.json"
						],
						"exclude": [
							"**/node_modules/**"
						]
					}
				}
			}
		}
	},
	"defaultProject": "default"
}
